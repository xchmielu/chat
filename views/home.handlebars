<div class="page-header">
    <h2>{{ title }}</h2>
</div>

<form id="join-form" action="#">
    <div class="form-group row">
        <label class="col-xs-2 col-form-label" for="nickname">Podaj nick</label>
        <div class="col-xs-6">
            <input id="nick" class="form-control" type="text">
        </div>
        <dic class="col-xs-4">
            <button class="btn btn-primary">Dołącz</button>
        </dic>
    </div>
</form>

<form id="chat-form" action="#">
    <div id="chat-window" class="chat-window">

    </div>
 <script id="chat-status-temaplate" type="text/x-handlebars-template">

<div class="chat-line">
    <div class="chat-line-time">\{{time}}</div>
    <div class="chat-line-status">\{{status}}</div>
</div>

</script>

 <script id="chat-message-temaplate" type="text/x-handlebars-template">

<div class="chat-line">
    <div class="chat-line-time">\{{time}}</div>
    <div class="chat-line-nick">\{{nick}}</div>
    <div class="chat-line-message">\{{message}}</div>
</div>

</script>
    <div class="form-group">
        <textarea id="message" rows="7" class="form-control" placeholder="Twoja wiadomość..."></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-primary pull-xs-right">Wyślij</button>
    </div>
</form>
